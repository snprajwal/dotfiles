[url "git@github.com:"]
	insteadOf = "gh:"
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[alias]
	a = add
	b = "!git switch \"$1\" || (\
		read -e -n 1 -p \"Create new branch $1? (Y/n) \" CHOICE; \
		if [[ $CHOICE != \"n\" ]]; then \
		git switch -c \"$1\"; \
		fi) #"
	bd = branch -D
	br = branch -a
	cl = clone
	cm = commit -s
	cma = commit --amend
	cman = commit --amend --no-edit
	d = diff
	l = log
	lo = log --oneline
	pl = pull
	ps = push
	s = status
	up = "!BRANCH=\"${1:-\"main\"}\"; git pull upstream $BRANCH && git push #"
[push]
	autoSetupRemote = true

# i3 config file (v4)
# General
set $mod Mod4
font pango: Noto Sans 11
floating_modifier $mod

# Locker
set $Locker i3lock -u -e -t -i ~/.local/share/lockscreen.png && sleep 1

# Keybindings
bindsym $mod+Return exec --no-startup-id st
bindsym $mod+d exec --no-startup-id dmenu_run -p "Run" -fn "JetBrains Mono-12" -nf '#a89984' -nb '#1d2021' -sb '#a89984' -sf '#1d2021'
bindsym $mod+p exec --no-startup-id clipmenu -p "Clipboard" -i -fn "JetBrains Mono-12" -nf '#a89984' -nb '#1d2021' -sb '#a89984' -sf '#1d2021'
bindsym $mod+l exec --no-startup-id $Locker
bindsym $mod+e exec --no-startup-id st -e lf
bindsym $mod+w exec --no-startup-id firefox
bindsym $mod+c exec --no-startup-id st -c nvim -e nvim +Files
# Screenshots
bindsym --release Print exec --no-startup-id maim -s | xclip -selection clipboard -t 'image/png'
bindsym --release Shift+Print exec --no-startup-id maim -s | tee ~/misc/$(date +%d%b%y_%Hh%Mm%Ss).png | xclip -selection clipboard -t 'image/png'

# Workspace variables
set $ws1 1:
set $ws2 2:
set $ws3 3:
set $ws4 4:
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

# i3 bindings
bindsym $mod+q kill
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+f fullscreen toggle
bindsym $mod+space layout toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+z split toggle
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
bindsym Mod1+Tab workspace back_and_forth
bindsym $mod+BackSpace move workspace to output left
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Function key controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86MonBrightnessUp exec --no-startup-id sudo xbacklight -inc 2
bindsym XF86MonBrightnessDown exec --no-startup-id sudo xbacklight -dec 2

# Custom modes
mode "Resize/System" {
	bindsym e exec --no-startup-id i3-msg exit
	bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
	bindsym r exec --no-startup-id systemctl reboot
	bindsym p exec --no-startup-id systemctl poweroff -i

	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	bindsym Escape mode "default"
	bindsym $mod+x mode "default"
}
bindsym $mod+x mode "Resize/System"

# Window rules
for_window [window_role="pop-up"] floating enable
for_window [class="mpv"] floating enable
for_window [class="firefox"] layout tabbed
for_window [class="nvim"] layout tabbed
assign [class="firefox"] $ws1
assign [class="st-256color" title="tmux|st"] $ws2
assign [class="nvim"] $ws3

# i3 properties
default_border pixel 2
default_floating_border pixel 2
# class                 border  bground text    indicator child_border
client.focused          #a89984 #a89984 #ebdbb2 #a89984   #a89984
client.focused_inactive #928374 #928374 #ebdbb2 #928374   #928374
client.unfocused        #1d2021 #1d2021 #a89984 #1d2021   #1d2021
client.urgent           #928374 #fb4934 #ebdbb2 #fb4934   #fb4934
client.placeholder      #1d2021 #1d2021 #ebdbb2 #1d2021   #1d2021
client.background       #ebdbb2

bar {
	i3bar_command i3bar --transparency
	position top
	status_command i3status
	separator_symbol 
	strip_workspace_numbers yes
	colors {
		background #1d2021bb
		statusline #ebdbb2
		separator  #928374
		# class 		   border  bground text
		focused_workspace  #928374 #928374 #ebdbb2
		active_workspace   #1d2021 #928374 #ebdbb2
		inactive_workspace #1d2021 #1d2021 #a89984
		urgent_workspace   #fb4934 #fb4934 #ebdbb2
		}
}

# Startup
exec --no-startup-id systemctl --user import-environment DISPLAY XAUTHORITY
exec --no-startup-id dbus-update-activation-environment DISPLAY XAUTHORITY
exec --no-startup-id xmodmap -e "keycode 135 = Super_R"
exec_always --no-startup-id feh --no-fehbg --bg-fill --randomize ~/.local/share/wallpaper/
exec --no-startup-id picom
exec --no-startup-id udiskie -aNsF
exec --no-startup-id redshift -l 12.88:77.6
exec --no-startup-id volctl
exec --no-startup-id xfce4-power-manager --daemon
exec --no-startup-id blueman-applet
exec --no-startup-id firefox
exec --no-startup-id st -e tmux

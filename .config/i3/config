# i3 config file (v4)
font pango: Noto Sans 11

# Variables
set $MOD Mod4
set $RUN exec --no-startup-id
set $LOCKER i3lock -u -e -t -i ~/.local/share/lockscreen.png && sleep 1
set $WS1 1:
set $WS2 2:
set $WS3 3:
set $WS4 4
set $WS5 5
set $WS6 6
set $WS7 7
set $WS8 8
set $WS9 9
set $WS10 10:

# i3 properties
floating_modifier $MOD
default_border pixel 2
default_floating_border pixel 2
# class                 border  bground text    indicator child_border
client.focused          #a89984 #a89984 #ebdbb2 #a89984   #a89984
client.focused_inactive #928374 #928374 #ebdbb2 #928374   #928374
client.unfocused        #1d2021 #1d2021 #a89984 #1d2021   #1d2021
client.urgent           #928374 #fb4934 #ebdbb2 #fb4934   #fb4934
client.placeholder      #1d2021 #1d2021 #ebdbb2 #1d2021   #1d2021
client.background       #ebdbb2

bar {
	i3bar_command i3bar --transparency
	position top
	status_command i3status
	separator_symbol 
	strip_workspace_numbers yes
	colors {
		background #1d2021bb
		statusline #ebdbb2
		separator  #928374
		# class 		   border  bground text
		focused_workspace  #928374 #928374 #ebdbb2
		active_workspace   #1d2021 #928374 #ebdbb2
		inactive_workspace #1d2021 #1d2021 #a89984
		urgent_workspace   #fb4934 #fb4934 #ebdbb2
		}
}
# Workspace rules
workspace_auto_back_and_forth yes
workspace $WS2 output eDP-1
workspace $WS10 output eDP-1
# Window rules
for_window [window_role="pop-up"] floating enable
for_window [class="mpv"] floating enable
for_window [class="firefox"] layout tabbed
for_window [class="nvim"] layout tabbed
for_window [title="WhatsApp — Mozilla Firefox"] move to workspace $WS10
for_window [workspace=$WS10] fullscreen enable
assign [class="firefox"] $WS1
assign [class="tmux"] $WS2
assign [class="nvim"] $WS3

# Set session variables for X11
$RUN systemctl --user import-environment DISPLAY XAUTHORITY
$RUN dbus-update-activation-environment DISPLAY XAUTHORITY
# Wallpaper
exec_always --no-startup-id feh --no-fehbg --bg-fill --randomize ~/.local/share/wallpaper/
# Autostart
$RUN picom
$RUN udiskie -aNsF
$RUN redshift -l 12.88:77.6
$RUN volctl
$RUN xfce4-power-manager
$RUN blueman-applet
$RUN firefox
$RUN firefox --new-window "web.whatsapp.com"
$RUN st -c tmux -e tmux

# Keybindings
bindsym $MOD+l $RUN $LOCKER
bindsym $MOD+Return $RUN st
bindsym $MOD+c $RUN st -c nvim -e nvim +Files
bindsym $MOD+e $RUN st -e lf
bindsym $MOD+d $RUN dmenu_run_history -p "Run" -fn "JetBrains Mono-12" \
			-nf '#a89984' -nb '#1d2021' -sb '#a89984' -sf '#1d2021'
bindsym $MOD+p $RUN clipmenu -p "Clipboard" -i -fn "JetBrains Mono-12" \
			-nf '#a89984' -nb '#1d2021' -sb '#a89984' -sf '#1d2021'
# Screenshots
bindsym --release Print $RUN maim -s | \
			xclip -selection clipboard -t 'image/png'
bindsym --release Shift+Print $RUN maim -s | \
			tee ~/misc/SS_$(date +%d%m%y_%H%M%S).png | \
			xclip -selection clipboard -t 'image/png'
# Controls
bindsym $MOD+q kill
bindsym $MOD+Left focus left
bindsym $MOD+Down focus down
bindsym $MOD+Up focus up
bindsym $MOD+Right focus right
bindsym $MOD+Shift+Left move left
bindsym $MOD+Shift+Down move down
bindsym $MOD+Shift+Up move up
bindsym $MOD+Shift+Right move right
bindsym $MOD+f fullscreen toggle
bindsym $MOD+Shift+f fullscreen toggle global
bindsym $MOD+space layout toggle
bindsym $MOD+Shift+space floating toggle
bindsym $MOD+z split toggle
bindsym $MOD+1 workspace $WS1
bindsym $MOD+2 workspace $WS2
bindsym $MOD+3 workspace $WS3
bindsym $MOD+4 workspace $WS4
bindsym $MOD+5 workspace $WS5
bindsym $MOD+6 workspace $WS6
bindsym $MOD+7 workspace $WS7
bindsym $MOD+8 workspace $WS8
bindsym $MOD+9 workspace $WS9
bindsym $MOD+0 workspace $WS10
# Use Alt+Tab to flip to chat
bindsym Mod1+Tab workspace $WS10
bindsym $MOD+Shift+1 move container to workspace $WS1
bindsym $MOD+Shift+2 move container to workspace $WS2
bindsym $MOD+Shift+3 move container to workspace $WS3
bindsym $MOD+Shift+4 move container to workspace $WS4
bindsym $MOD+Shift+5 move container to workspace $WS5
bindsym $MOD+Shift+6 move container to workspace $WS6
bindsym $MOD+Shift+7 move container to workspace $WS7
bindsym $MOD+Shift+8 move container to workspace $WS8
bindsym $MOD+Shift+9 move container to workspace $WS9
bindsym $MOD+Shift+0 move container to workspace $WS10
bindsym $MOD+Shift+minus move scratchpad
bindsym $MOD+minus scratchpad show
bindsym $MOD+BackSpace move workspace to output left
bindsym $MOD+Shift+c reload
bindsym $MOD+Shift+r restart
# Volume handlers
bindsym Shift+F10 $RUN pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym Shift+F11 $RUN pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym Shift+F12 $RUN pactl set-sink-volume @DEFAULT_SINK@ +5%

# Custom mode for power options
mode "Power/Resize" {
	bindsym s $RUN $LOCKER && systemctl suspend --no-wall, mode "default"
	bindsym e $RUN i3-msg exit
	bindsym r $RUN systemctl reboot --no-wall
	bindsym p $RUN systemctl poweroff -i --no-wall

	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	bindsym Escape mode "default"
	bindsym $MOD+x mode "default"
}
bindsym $MOD+x mode "Power/Resize"
